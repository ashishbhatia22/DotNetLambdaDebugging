{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": ["build", "--configuration", "Debug"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/src/HelloWorld"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "sam-build",
            "type": "shell",
            "command": "sam",
            "args": ["build", "--use-container"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}